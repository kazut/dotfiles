set nocompatible
set encoding=utf-8

filetype plugin on
syntax on
set nu
set t_Co=256
set background=dark

filetype indent on

set expandtab
set shiftwidth=4
set tabstop=4
set softtabstop=4
set shiftround
set nowrap

set wildmenu
set wildmode=list:longest,full

set mouse=a

set scrolloff=3
set sidescrolloff=5
set sidescroll=1

set backspace=indent,eol,start
set whichwrap=h,l,b,<,>,~,[,]

set laststatus=2
set showmode
set showcmd
set modeline
set ruler
set title

set cursorline
set nohlsearch
set incsearch
set ignorecase
set smartcase
